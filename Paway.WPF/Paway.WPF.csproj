<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<UseWPF>true</UseWPF>
		<UseWindowsForms>true</UseWindowsForms>
		<TargetFrameworks>net45;netcoreapp3.1</TargetFrameworks>
		<!--用于指示编译器是否生成文档文件的值-->
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<!--不自动生成程序集信息(版本号)-->
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<Tags>WPF Extension Adorner Animation Helper</Tags>
		<AssemblyName>Paway.WPF</AssemblyName>
		<RootNamespace>Paway.WPF</RootNamespace>
		<OutputPath>..\bin\$(Configuration)</OutputPath>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\AssemblyVersion.cs">
			<Link>Properties\AssemblyVersion.cs</Link>
		</Compile>
	</ItemGroup>
	<ItemGroup>
		<Resource Include="Resource\fontawesome.ttf" />
		<Resource Include="Images\**" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Paway.Helper" Version="2.7.0" />
	</ItemGroup>

</Project>